  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start application",
      "cwd": "${workspaceFolder}/backend",
      "request": "launch",
      "runtimeArgs": ["run-script", "start"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Debug backend tests",
      "cwd": "${workspaceFolder}/backend",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
